
{{> userHeader}}
<style>
    .fa {
  font-size: 50px;
  cursor: pointer;
  user-select: none;
}
</style>
<div class="container">

    <div class="card mb-3" style="max-width: 1000px;border:2px solid black">
          {{#each blog}}
  <div class="row g-0">
    <div class="col-md-4">
      <img src="/images/blogs/{{this.img}}" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">Stories</h5>
        <p class="card-text">{{this.discription}}</p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago </small></p>
      <a href="/users/like/{{this.id}}" ><i style="height: 30px;" class="fa fa-thumbs-up"></i></a><span class="badge rounded-pill bg-danger">{{this.likes}}</span>

      </div>
    </div>
  </div>
  {{/each}}

</div>

</div>